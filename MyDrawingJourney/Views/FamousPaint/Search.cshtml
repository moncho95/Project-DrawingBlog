
@model FamousPaintingViewModel

@{
    ViewBag.Title = "Found Painting";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model != null)
{
    <div class="row">
        
            <div class="col-sm-6">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-title text-center">@Model.Name</h4>
                        <img src="@Model.ImageUrl"/>
                        <p class="card-text">@Model.Name</p>
                        <p class="card-text">@Model.Description</p>
                        <div class="d-grid gap-2">
                            
                            
                            <form class="mt-2" asp-controller="FamousPaint" asp-action="DeletePainting" asp-route-id="@Model.Id">
                                <div class="d-grid gap-2">
                                    <input type="submit" value="Delete" class="btn btn-danger mb-2" onclick="return confirm('Are you sure you want to delete post: @Model.Name?')"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        
    </div>
}