@using MyDrawingJourney.ViewModels.Home
@model Post

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Posts</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
 h2{
	  font-family:"Times New Roman", Times, serif;
 }
 p{
	 font-family: "Lucida Console", "Courier New", monospace;
 }
 .container {
  position: relative;
}

.center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 38px;
}

img { 
  width: 100%;
  height: auto;
  opacity: 0.5;
}
  </style>
</head>
<body>
     @if (Model == null)
    {
<div class="container">
  <img src="~/img/blogposts/blog.jpg" alt="Blog" width="1000" height="300">
  <div class="center">Choose a post from the Home page.</div>
  </div>
   
    }
    else{
    <div class = "container">
       <img src="~/img/blogposts/blog.jpg" alt="Blog" width="1000" height="300">
  
	<div class= "post no-shadow">
		<img src = ""/>
		<h2 class = title>@Model.Title</h2>
	</div>

	<div class= "post-body">
		@Html.Raw(Model.Body)

	</div>
	 <div class="comment-section">
            @{
                await Html.RenderPartialAsync("MainComment", new CommentViewModel { PostId = Model.Id, MainCommentId = 0 });
            }

            @foreach (var c in Model.MainComments)
            {
                <p>
                    @c.Message --- @c.Created
                </p>
                <div style="margin-left: 20px;">
                    <h4>Sub Comments</h4>
                    @{
                        await Html.RenderPartialAsync("MainComment", new CommentViewModel { PostId = Model.Id, MainCommentId = c.Id });
                    }

                    @foreach (var sc in c.SubComments)
                    {
                        <p>
                            @sc.Message --- @sc.Created
                        </p>
                    }
                </div>
            }
        </div>
</div>
}
</body>
</html>