@model MyDrawingJourney.ViewModels.Home.ContactViewModel

@{
    ViewData["Title"] = "ContactMail";
}

<h1>Contact me by Mail</h1>

<h6>If you found my site interesting, please check out my instagram profile (link in the footer bellow) for more content, or send me a Mail.</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ContactMail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" ></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (@ViewBag.ConfirmMsg!=null)
{
    <div class= "alert alert-success">@ViewBag.ConfirmMsg</div>
}
<div>
    <a asp-controller="Blog" asp-action="Home">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
